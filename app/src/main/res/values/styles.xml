<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="txt">
	   <item name ="android:paddingLeft">47dp </item>
	   <item name="android:background">@drawable/ximg_txt_presss</item>
	   <item name="android:paddingRight">47dp</item>
	   <item name="android:singleLine">true</item>
	</style>
	<style name="lableInfo">
	   <item name="android:gravity">center</item> 
       <item name="android:textSize">20sp</item>  
       <item name="android:singleLine">true</item>  
       <item name="android:textColor">#00c0e9</item>
	</style>
	<style name="lableDialog">
	   <item name="android:layout_marginLeft">6dp</item> 
	   <item name="android:layout_marginTop">4dp</item>
	    <item name="android:layout_marginRight">6dp</item>  
	    <item name="android:layout_marginBottom">4dp</item>
       <item name="android:textSize">22sp</item>
       <item name="android:textStyle">bold</item>           
	</style>
	<style name="CustomDialogTheme" parent="@android:style/Theme.Translucent">
            <item name="android:windowIsTranslucent">true</item>
		 	<item name="android:windowContentOverlay">@null</item>
			<item name="android:windowIsFloating">true</item>
			 <item name="android:windowNoTitle">true</item>
			 <item name="android:background">@null</item>
    </style>
   	<style name="lableChat">
	   <item  name="android:layout_width">wrap_content</item>
	   <item  name="android:layout_height">wrap_content</item>
	   <item name="android:gravity">center_vertical</item>
       <item name="android:textSize">16sp</item>  
	</style>
</resources>